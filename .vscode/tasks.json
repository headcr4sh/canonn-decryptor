{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "compile",
            "args": [ "run", "-s", "watch" ],
            "isBackground": true,
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$tsc-watch",
            "suppressTaskName": true
        },
        {
            "taskName": "test",
            "args": [ "run", "-s", "check" ],
            "isTestCommand": true,
            "showOutput": "always",
            "suppressTaskName": true
        }
    ]
}
